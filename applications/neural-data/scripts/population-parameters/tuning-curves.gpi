# Preamble
cd load_path
set output "tuning-curves.png"

# Labels
set key autotitle columnhead
set xlabel 'Stimulus'
set ylabel 'Rate'
set xtics ("0" 0, "0.5π" pi, "π" 2*pi)
set xrange [0:2*pi]
set ytics (0,2,4,6)

csv = "tuning-curves.csv"

stats csv nooutput

# Plot
plot for [i=2:STATS_columns] csv index 0 using 1:i with lines lw 3 notitle
